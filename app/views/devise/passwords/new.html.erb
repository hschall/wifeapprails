<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="p-4 rounded shadow bg-light">
        <!-- Header -->
        <h2 class="text-center mb-4">Forgot your password?</h2>

        <!-- Error Messages -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <!-- Email Field -->
          <div class="mb-3">
            <%= f.label :email, "Email Address", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email address" %>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <%= f.submit "Send Reset Instructions", class: "btn btn-primary" %>
          </div>
        <% end %>

        <!-- Links -->
        <div class="mt-4 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

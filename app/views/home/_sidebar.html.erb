<% if user_signed_in? %>
<div class="sidebar collapse" id="sidebar">
  <!-- Links Section -->
  <div>
    <%= link_to root_path, class: "d-flex align-items-center" do %>
      <%= image_tag("home.svg", alt: "Home", class: "me-2", style: "max-height: 20px;") %>
      Home
    <% end %>

    <%= link_to home_dashboard_path, class: "d-flex align-items-center" do %>
      <%= image_tag("dashboard.svg", alt: "Dashboard", class: "me-2", style: "max-height: 20px;") %>
      Dashboard
    <% end %>

    <% if current_user.admin? %>
      <%= link_to admin_users_path, class: "d-flex align-items-center" do %>
        <%= image_tag("users.svg", alt: "User Management", class: "me-2", style: "max-height: 20px;") %>
        User Management
      <% end %>
    <% end %>
  </div>

  <!-- Divider Line Above User Dropdown -->
  <hr class="user-dropdown-divider">

  <!-- User Dropdown -->
  <div class="user-dropdown">
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle text" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-user me-1"></i> <%= current_user.email %>
      </a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <li>
          <%= link_to "Edit User", edit_user_registration_path, class: "dropdown-item" %>
        </li>
        <li>
          <hr class="dropdown-divider">
        </li>
        <li>
          <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item text-danger" %>
        </li>
      </ul>
    </li>
  </div>
</div>
<% end %>

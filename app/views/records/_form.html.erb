<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="p-4 rounded shadow bg-light">
        <!-- Error Messages -->
        <% if record.errors.any? %>
          <div class="alert alert-danger">
            <h5><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h5>
            <ul class="mb-0">
              <% record.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Form -->
        <%= form_with(model: record) do |form| %>
          <!-- Fecha Field -->
          <div class="mb-3">
            <%= form.label :fecha, "Fecha", class: "form-label" %>
            <%= form.date_field :fecha, class: "form-control", placeholder: "Fecha" %>
          </div>

          <!-- Concepto Field -->
          <div class="mb-3">
            <%= form.label :concepto, "Concepto", class: "form-label" %>
            <%= form.text_field :concepto, class: "form-control", placeholder: "Concepto" %>
          </div>

          <!-- Importe Field -->
          <div class="mb-3">
            <%= form.label :importe, "Importe", class: "form-label" %>
            <%= form.text_field :importe, class: "form-control", placeholder: "Importe" %>
          </div>

          <!-- Comentario Field -->
          <div class="mb-3">
            <%= form.label :comentario, "Comentario", class: "form-label" %>
            <%= form.text_field :comentario, class: "form-control", placeholder: "Comentario" %>
          </div>

          <!-- User ID Field (Hidden) -->
          <%= form.hidden_field :user_id, value: current_user.id %>

          <!-- Submit Button -->
          <div class="d-grid">
            <%= form.submit "Submit", class: "btn btn-primary shadow-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

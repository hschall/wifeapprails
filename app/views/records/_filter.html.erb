<div class="container mt-4">
  <!-- Header -->
  <h1 class="text-center mb-4">Expense Records</h1>

  <!-- Filter Section -->
  <div class="row mb-3">
    <div class="col-md-6 mx-auto">
      <%= form_with url: records_path, method: :get, local: true, class: "mb-3" do |form| %>
        <div class="form-group mb-2">
          <%= form.label :month, "Filter by Month:", class: "form-label" %>
          <%= form.select :month, options_for_select((1..12).map { |m| [Date::MONTHNAMES[m], "#{Date.today.year}-#{m.to_s.rjust(2, '0')}"] }, params[:month]), {}, class: "form-select" %>
        </div>
        <div class="d-flex justify-content-start">
          <%= form.submit "Apply Filter", class: "btn btn-primary me-2" %>
          <%= link_to "Clear Filters", records_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>

 



